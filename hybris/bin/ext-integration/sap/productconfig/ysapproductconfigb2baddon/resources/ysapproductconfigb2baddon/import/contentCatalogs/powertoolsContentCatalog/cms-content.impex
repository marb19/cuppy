### Product Configure Link                   ###
################################################

# Add default instance of CMSConfigurableProductRestriction
INSERT_UPDATE CMSConfigurableProductRestriction;$contentCV[unique=true];uid[unique=true];name
;;SAPProductConfigProductRestriction;SAP Product Configuration Restriction

# Add default instance of inverse CMSConfigurableProductRestriction
INSERT_UPDATE CMSInverseRestriction;$contentCV[unique=true];uid[unique=true];name;originalRestriction(uid,$contentCV)
;;SAPProductConfigInverseRestriction;SAP Product Configuration Inverse Restriction;SAPProductConfigProductRestriction

