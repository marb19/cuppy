<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="items.xsd">

	<enumtypes>
		
		<enumtype code="ConsignmentEntryStatus" autocreate="true"
			generate="true" dynamic="true">
			<value code="WAITING" />
			<value code="PICKPACK" />
			<value code="READY" />
			<value code="SHIPPED" />
			<value code="CANCELLED" />
		</enumtype>
	
	</enumtypes>
	
	<relations>
	    
            <!-- relations with subtypes of BussinessProcess -->
			<relation generate="true" localized="false"
				code="Consignment2SapConsignmentProcess" autocreate="true">
				<sourceElement type="Consignment" cardinality="one"
					qualifier="consignment">
					<modifiers initial="true" optional="true" />
				</sourceElement>
				 <targetElement type="SapConsignmentProcess" cardinality="many"
                    qualifier="sapConsignmentProcesses">
                    <modifiers initial="true" optional="true" />
                </targetElement>
			</relation>

            <relation generate="true" localized="false"
                code="OrderProcess2SapConsignmentProcess" autocreate="true">
                <sourceElement type="OrderProcess" cardinality="one"
                    qualifier="parentProcess">
                    <modifiers initial="true" optional="true" />
                </sourceElement>
                <targetElement type="SapConsignmentProcess" cardinality="many"
                    qualifier="sapConsignmentProcesses">
                    <modifiers initial="true" optional="true" />
                </targetElement>
            </relation>
        </relations>
        
	<itemtypes>
	
	<!-- Subtypes of SapBusinessProcess -->
		<itemtype code="SapConsignmentProcess" autocreate="true"
			generate="true" jaloclass="de.hybris.platform.sap.ysapomsfulfillment.jalo.SapConsignmentProcess"
			extends="BusinessProcess">
			
			<attributes>

                <attribute qualifier="waitingForConsignment" type="boolean">
                    <description>Mark that process is waiting for consignment</description>
                    <modifiers optional="false" initial="false"/>
                    <persistence type="property" />
                    <defaultvalue>Boolean.FALSE</defaultvalue>
                </attribute>

                <attribute qualifier="warehouseConsignmentState" type="WarehouseConsignmentState">
                    <description>State of warehouse process.</description>
                    <persistence type="property" />
                    <modifiers initial="false" optional="true" />
                </attribute>
                
                <attribute qualifier="done" type="boolean">
                    <description>Mark process as done</description>
                    <modifiers optional="false" initial="false"/>
                    <persistence type="property" />
                    <defaultvalue>Boolean.FALSE</defaultvalue>
                </attribute>

            </attributes>
            
		</itemtype>
		
		<itemtype code="ConsignmentEntry" autocreate="false" generate="false">
				<description>Extending ConsignmentEntry type with additional attributes.</description>
				<attributes>
					<attribute qualifier="sapOrderEntryRowNumber" type="int">
						<modifiers read="true" write="true" optional="true" />
						<persistence type="property" />
					</attribute>
					
					<attribute qualifier="status" type="ConsignmentEntryStatus">
					<modifiers read="true" write="true" optional="false" />
					<persistence type="property" />
					<defaultvalue>em().getEnumerationValue("ConsignmentEntryStatus", "WAITING")</defaultvalue>
				</attribute>
				</attributes>
			</itemtype>
			
	</itemtypes>
	
</items>
