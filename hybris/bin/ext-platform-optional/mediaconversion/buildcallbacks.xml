<project name="mediaconversion_buildcallbacks" >
	<macrodef name="mediaconversion_after_build">
		<sequential>
			<!-- fixing potential issues with access rights -->
			<chmod perm="ugo+rx">
				<fileset dir="${ext.mediaconversion.path}/resources/mediaconversion/imagemagick/bin/">
					<include name="**/*"/>
					<exclude name="**/*.exe"/>
					<exclude name="**/*.dll"/>
				</fileset>
			</chmod>
		</sequential>
	</macrodef>
		
</project>
